{
  "$schema": "https://turbo.build/schema.json",
  "ui": "tui",
  "globalEnv": [
    "V0_API_KEY",
    "AUTH_SECRET",
    "POSTGRES_URL",
    "GITHUB_EXPORTER_CLIENT_ID",
    "GITHUB_EXPORTER_CLIENT_SECRET",
    "V0_API_URL"
  ],
  "tasks": {
    "build": {
      "dependsOn": ["^build"],
      "outputs": ["dist/**", ".next/**", "!.next/cache/**"],
      "env": [
        "V0_API_KEY",
        "AUTH_SECRET",
        "POSTGRES_URL",
        "GITHUB_EXPORTER_CLIENT_ID",
        "GITHUB_EXPORTER_CLIENT_SECRET",
        "V0_API_URL"
      ]
    },
    "test": {
      "dependsOn": ["^build", "build"]
    },
    "test:watch": {
      "cache": false,
      "persistent": true
    },
    "lint": {
      "dependsOn": ["^lint"]
    },
    "type-check": {
      "dependsOn": ["^build", "build"]
    },
    "dev": {
      "cache": false,
      "persistent": true
    },
    "sdk:generate": {
      "cache": false,
      "outputs": ["src/sdk/**", "openapi.json"]
    },
    "format": {
      "cache": false
    },
    "clean": {
      "dependsOn": ["^clean"]
    }
  }
}
